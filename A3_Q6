public class LinearSearch {
    public static void main(String[] args) 
    {
        int[] arr = { 6, 7, 8, 4, 1 ,12};
        int n = arr.length;
        System.out.println("The given element occurs at: "+findElement(arr,n,8));
    }

    public static int findElement(int[] arr, int n, int num) 
    {
        int result = -1;
        for (int i = 0; i < n; i++) 
        {
            if (arr[i] == num) {
                result = i;
            }
        }
        return result;
    }
}
